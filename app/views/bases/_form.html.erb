<%= form_with(model: @base, local: true) do |f| %>
              
  <%= f.label :baseid, class: "label-#{yield(:class_text)}" %>
  <%= f.number_field :baseid, class: "form-control" %>

  <%= f.label :basename, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :basename, class: "form-control" %>

  <%= f.label :basetype, class: "label-#{yield(:class_text)}" %>
  <%= f.select :basetype, {'出勤': '出勤', '退勤': '退勤'}, {include_blank: '選択してください'}, { class: "form-control", required: true } %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>